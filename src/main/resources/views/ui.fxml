<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<HBox maxWidth="1600" minHeight="900" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.operations.StageOps.SimpleUiController">
   <!-- Sidebar for Tab Navigation -->
   <AnchorPane minWidth="225.0" prefHeight="900.0" style="-fx-background-color: white;">
      <children>
         <Button fx:id="tab1Button" layoutX="29.0" layoutY="85.0" onAction="#showDashboard" prefHeight="56.0" prefWidth="167.0" text="Dashboard">
            <font>
               <Font name="Sansation Regular" size="16.0" />
            </font></Button>
         <Button fx:id="tab2Button" layoutX="29.0" layoutY="141.0" onAction="#showCalendar" prefHeight="56.0" prefWidth="167.0" text="Calendar">
            <font>
               <Font name="Sansation Regular" size="16.0" />
            </font></Button>
         <Button fx:id="tab3Button" layoutX="29.0" layoutY="197.0" onAction="#showBookings" prefHeight="56.0" prefWidth="167.0" text="Bookings">
            <font>
               <Font name="Sansation Regular" size="16.0" />
            </font></Button>
         <Button fx:id="tab4Button" layoutX="29.0" layoutY="253.0" onAction="#showSeatManagement" prefHeight="56.0" prefWidth="167.0" text="Seat Management"><font>
            <Font name="Sansation Regular" size="16.0" />
         </font></Button>
         <Button fx:id="tab5Button" layoutX="29.0" layoutY="309.0" onAction="#showSalesRevenue" prefHeight="56.0" prefWidth="167.0" text="Sales/Revenue">
            <font>
               <Font name="Sansation Regular" size="16.0" />
            </font></Button>
         <Button fx:id="tab6Button" layoutX="29.0" layoutY="365.0" onAction="#showEventTab" prefHeight="56.0" prefWidth="167.0" text="Event Management">
            <font>
               <Font name="Sansation Regular" size="16.0" />
            </font></Button>
         <Button fx:id="tab7Button" layoutX="29.0" layoutY="420.0" onAction="#showClientTab" prefHeight="56.0" prefWidth="167.0" text="Client Management">
            <font>
               <Font name="Sansation Regular" size="16.0" />
            </font></Button>
         <ImageView fitHeight="28.0" fitWidth="136.0" layoutX="44.0" layoutY="28.0">
            <image>
               <Image url="@../static/StageOpsLogo.png" />
            </image>
         </ImageView>
      </children>
   </AnchorPane>

   <!-- Content Area -->
   <StackPane fx:id="contentArea" minWidth="1180" prefHeight="600" style="-fx-background-color: lightgray;" />
</HBox>
